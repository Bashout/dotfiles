#!/bin/sh

# TODO extend this config

get_vcs_branch() {
    if [ "$(command -v vcs)" ]; then
        VCS_BRANCH=$(vcs -b)
        if [ "$VCS_BRANCH" != "" ]; then
            printf " [32m%s[00m" "$VCS_BRANCH"
        fi
    fi
    printf ""
}
export PS1="[${USER}@${HOSTNAME} ${PWD##*/}$(get_vcs_branch)]\\$ "
