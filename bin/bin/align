#!/bin/sh

# Align stuff

if [ "$1" = "-t" ]; then
    # Correctly align markdown-style tables
    cat | sed 's/$/ |/' | column -ts \| -o \| | \
        sed -e 's/ |$//' -e 's/ \+$//' -e 's/^ //'
elif [ -n "$1" ]; then
    # Align by char $1
    cat | column -ts "$1" -o "$1" | sed "s/ \+$1$//"
else
    # Basic align by spaces (doesn't work very well)
    cat | column -to " " | sed 's/ \+$//'
fi
