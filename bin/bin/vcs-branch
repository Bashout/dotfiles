#!/bin/sh

# TODO provide option to print only the VSC used
# TODO create a perl version of this and time each (use fastest)

# Check Git Branch
BRANCH=$(git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/[* ]\+\(.*\)/\1/')
# Check HG Branch
if [ "${BRANCH}" = "" ]; then
    BRANCH=$(hg branch 2> /dev/null | awk '{print " "$1""}')
fi
printf "%s" "${BRANCH}"
