        call mkdir($HOME . '/.config/nvim/swap', 'p')
    endif
    set directory=~/.config/nvim/swap
else
    if !isdirectory($HOME . '/.vim/swap')
        call mkdir($HOME . '/.vim/swap', 'p')
    endif
    set directory=~/.vim/swap
endif

" Undo
