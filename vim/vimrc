        if !isdirectory($HOME . '/.config/nvim/undo')
            call mkdir($HOME . '/.config/nvim/undo', 'p')
        endif
        set undodir=$HOME/.config/nvim/undo
    else
        if !isdirectory($HOME . '/.vim/undo')
            call mkdir($HOME . '/.vim/undo', 'p')
        endif
        set undodir=$HOME/.vim/undo
    endif
    set undofile
else
    set undolevels=1000
endif

