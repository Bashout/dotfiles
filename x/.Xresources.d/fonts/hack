! Hack Font Definitions
! -----------------------------

! Default Font
#define fontName Hack
#define fontSize 14

#define fontNameB Hack
#define fontSizeB 14

#define fontNameI Hack
#define fontSizeI 14

#define fontNameBI Hack
#define fontSizeBI 14

! Fallback Font
#define fontFbName Monospace
#define fontFbSize 14

#define fontFbNameB Monospace
#define fontFbSizeB 14

#define fontFbNameI Monospace
#define fontFbSizeI 14

#define fontFbNameBI Monospace
#define fontFbSizeBI 14

! Either Font
#define fontUseB    true
#define fontUseI    true
#define fontSpacing 0


