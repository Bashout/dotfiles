! [Name] Font Definitions
! -----------------------------

! Default Font
#define fontName Monospace
#define fontSize 14

#define fontNameB Monospace
#define fontSizeB 14

#define fontNameI Monospace
#define fontSizeI 14

#define fontNameBI Monospace
#define fontSizeBI 14

! Fallback Font
#define fontFbName Hack
#define fontFbSize 14

#define fontFbNameB Hack
#define fontFbSizeB 14

#define fontFbNameI Hack
#define fontFbSizeI 14

#define fontFbNameBI Hack
#define fontFbSizeBI 14

! Either Font
#define fontUseB    true
#define fontUseI    true
#define fontSpacing -1


